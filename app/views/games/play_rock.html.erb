<div class="row">
  <div class="col-md-12">
    <h1 class="text-center"> You played  </h1>
    <h1 class="text-center"><i class="fa micon fa-hand-rock-o "></i></h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">
      The computer played
    </h1>
    <h1 class="text-center">
      <%
      num = rand(3)
      computer_move =["rock", "paper", "scissors"][num]
      picture =["fa-hand-rock-o", "fa-hand-paper-o", "fa-hand-scissor-o"][num]
      %>
      <i class="fa micon <%= picture %>"></i>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="well text-center">
      <h1>
        <span class="label label-success">
          <%  if computer_move === "rock" %>
          You tied!
          <% elsif computer_move === "paper" %>
          You lose!
          <% else %>
          You win!
          <% end %>
        </span>
      </h1>
    </div>
  </div>
</div>
